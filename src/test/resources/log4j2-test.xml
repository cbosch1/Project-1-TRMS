<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <RollingFile name="RootRollingTest" fileName="logs/testLogs/TRMS.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %c - %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <RollingFile name="ControlRollingTest" fileName="logs/testLogs/TRMS-Control.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <RollingFile name="DaoRollingTest" fileName="logs/testLogs/TRMS-Dao.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <RollingFile name="ServiceRollingTest" fileName="logs/testLogs/TRMS-Service.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <RollingFile name="UtilRollingTest" fileName="logs/testLogs/TRMS-Util.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <RollingFile name="JavalinRollingTest" fileName="logs/testLogs/TRMS-Javalin.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%highlight{%d [%t] %-5level: %msg%n%throwable}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RootRollingTest" />
        </Root>

        <Logger name="Controller" level="INFO">
            <AppenderRef ref="ControlRollingTest" />
        </Logger>

        <Logger name="Dao" level="INFO">
            <AppenderRef ref="DaoRollingTest" />
        </Logger>

        <Logger name="Service" level="INFO">
            <AppenderRef ref="ServiceRollingTest" />
        </Logger>

        <Logger name="Util" level="INFO">
            <AppenderRef ref="UtilRollingTest" />
        </Logger>

        <Logger name="Javalin" level="INFO">
            <AppenderRef ref="JavalinRollingTest" />
        </Logger>
    </Loggers>
</Configuration>
